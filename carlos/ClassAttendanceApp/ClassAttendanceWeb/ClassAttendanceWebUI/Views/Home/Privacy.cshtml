@model IEnumerable<ClassAttendanceDomain.ApplicationUser> 

@{
    ViewData["Title"] = "Privacy Policy";
}

<h1>@ViewData["Title"]</h1>

<p>Use this page to detail your site's privacy policy.</p>

<table class="table">
    <thead>
        <tr><th>First Name</th><th>Last Name</th><th>Email</th><th>Name</th><th>Language</th></tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.FirstName</td>
                <td>@student.LastName</td>
                <td>@student.Email</td>
                <td>@student.Language</td>
                <td>@DateTime.Now</td>

            </tr>
        }
    </tbody>
</table>

@{
    string OutputCurrentTime(string country)
    {
        return $"<p>Time: <strong>{country}</strong> {DateTime.Now.ToShortTimeString()}</p>";
    }

    OutputCurrentTime("Canada");
    OutputCurrentTime("Bill Gates");
}
