@model StudentViewModel
@{
    ViewData["Title"] = "Students";
}

<h1>Students</h1>

<table class="table">
    <thead>
    <tr>
        <th>ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Level</th>
        <th>Languages</th>
        <th><a class="btn btn-primary btn-sm" asp-action="Add">Add</a></th>
    </tr>
    </thead>
    <tbody>
        @foreach (var student in Model.Students)
        {
            <tr>
                <td>@student.Id</td>
                <td>@student.FirstName</td>
                <td>@student.LastName</td>
                <td>@student.GetLevelString()</td>
                <td>@string.Join(",", student.Languages)</td>
                <td>
                    <a class="btn btn-primary btn-sm" asp-action="Update" asp-route-id="@student.Id">Edit</a>
                    <a class="btn btn-primary btn-sm" asp-action="Delete" asp-route-id="@student.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


